<Window x:Class="TRPGGMTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TRPG GM Tool" Height="450" Width="800">
    <Grid>
        <!-- メニューバーを追加 -->
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="新規作成(_N)" />
                    <MenuItem Header="開く(_O)" />
                    <MenuItem Header="保存(_S)" />
                    <Separator />
                    <MenuItem Header="終了(_X)" />
                </MenuItem>
                <MenuItem Header="設定(_S)">
                    <MenuItem Header="プレイヤー設定(_P)" />
                    <MenuItem Header="判定レベル設定(_J)" />
                </MenuItem>
                <!-- 開発用メニューを追加 -->
                <MenuItem Header="開発(_D)">
                    <MenuItem Header="テストウィンドウ(_T)" Click="TestMenuItem_Click" />
                </MenuItem>
            </Menu>

            <!-- メインコンテンツエリア -->
            <Grid>
                <TextBlock Text="TRPG GM支援ツール" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          FontSize="24"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>